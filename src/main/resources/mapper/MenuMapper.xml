<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flong.springboot.modules.mapper.MenuMapper">
  <resultMap id="BaseResultMap" type="com.flong.springboot.modules.entity.Menu">
    <result column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="menu_code" jdbcType="VARCHAR" property="menuCode" />
    <result column="parent_id" jdbcType="BIGINT" property="parentId" />
    <result column="node_type" jdbcType="TINYINT" property="nodeType" />
    <result column="icon_url" jdbcType="VARCHAR" property="iconUrl" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
    <result column="link_url" jdbcType="VARCHAR" property="linkUrl" />
    <result column="level" jdbcType="INTEGER" property="level" />
    <result column="path" jdbcType="VARCHAR" property="path" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
  </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
      SELECT
      id,name,menu_code,parent_id,node_type,icon_url,sort,link_url,path,is_delete
      FROM t_pss_menu where 1=1
      order by id

<!--      <if test="name != null and name != ''">-->
<!--        and name=#{name}-->
<!--      </if>-->

<!--      <if test="id != null and id != ''">-->
<!--        and id=#{id}-->
<!--      </if>-->

<!--      <if test="parentId != null and parentId != ''">-->
<!--        and parent_id=#{parentId}-->
<!--      </if>-->

<!--       order by level,sort asc-->
    </select>

  <select id="findMenuByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
    select * from t_pss_menu t1 where 1=1

          <if test="userId != null and userId != ''">
            and t1.id in (
                select menu_id from t_pss_role_menu t where t.role_code in (
                select role_code from t_pss_user_role where
                  role_code in (select code from t_pss_role)
                  and user_id=#{userId}
                )
            )

          </if>
  </select>


  <select id="findMenuByRoleCode" resultMap="BaseResultMap" parameterType="java.lang.String">
    select * from t_pss_menu t1 where t1.id in (
      select menu_id from t_pss_role_menu t where 1=1

      <if test="roleCode != null and roleCode != ''">
        and t.role_code = #{roleCode}
      </if>

    )
  </select>


</mapper>